{# form.html.twig #}

{{ form_start(form) }}

<div class="input-group input-group-outline mb-3">
    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Enter your username'}}) }}
</div>
<div class="input-group input-group-outline mb-3">
    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your Email'}}) }}
</div>

<div class="input-group input-group-outline mb-3">
    {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'style': 'margin-bottom:15px;', 'placeholder': 'Enter your password', 'type': 'password'}}) }}
    {% if form.plainPassword.vars.errors|length > 0 %}
        <div class="text-danger">
            {% for error in form.plainPassword.vars.errors %}
                {{ error.message }}
            {% endfor %}
        </div>
    {% endif %}
</div>
<div class="text-center">
    <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">Submit</button>
</div>

{{ form_end(form) }}
